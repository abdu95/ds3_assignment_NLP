data("AssociatedPress")


text <- c("Because I could not stop for Death -",
          "He kindly stopped for me -",
          "The Carriage held but just Ourselves -",
          "and Immortality")

# vector with 4 elements. 2 columns. 4 rows (lines)
text_df <- tibble(line = 1:4, text = text)

# lines are broken into tokens. 1st line contains 7 tokens
text_df %>%
  unnest_tokens(word, text)



library(janeaustenr)
library(dplyr)
library(stringr)

what <- austen_books()

original_books <- austen_books() %>%
  group_by(book) %>%
  mutate(linenumber = row_number(),
         chapter = cumsum(str_detect(text, 
                                     regex("^chapter [\\divxlc]",
                                           ignore_case = TRUE)))) %>%
  ungroup()

what_ch <- unique(what$book)

what_b <- austen_books() %>%
  group_by(book)
row_number()


cumsum(str_detect(what$text, 
           regex("^chapter [\\divxlc]",
                 ignore_case = TRUE)))

# cumsum() returns number. 
# group_by(book) -> how many chapters (number cumsum() returned) are there for each book.
# 


tidy_books <- original_books %>%
  unnest_tokens(word, text)

# 
data(stop_words)
